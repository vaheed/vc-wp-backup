{
  "name": "virakcloud/virakcloud-backup",
  "description": "Backup, restore, and migrate WordPress using VirakCloud S3-compatible storage.",
  "type": "wordpress-plugin",
  "license": "MIT",
  "require": {
    "php": ">=8.1",
    "aws/aws-sdk-php": "^3.300",
    "ramsey/uuid": "^4.7"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.5",
    "squizlabs/php_codesniffer": "^3.9",
    "phpstan/phpstan": "^1.11",
    "dealerdirect/phpcodesniffer-composer-installer": "^1.0",
    "wp-coding-standards/wpcs": "^3.0",
    "php-stubs/wordpress-stubs": "^6.5"
  },
  "autoload": {
    "psr-4": {
      "VirakCloud\\Backup\\": "src/"
    }
  },
  "scripts": {
    "lint": "phpcs -p",
    "stan": "phpstan analyse",
    "test": "phpunit --colors=always",
    "build-zip": "php -d phar.readonly=0 bin/build-zip.php",
    "i18n:pot": "python3 tools/make_pot.py"
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  },
  "extra": {
    "branch-alias": {
      "dev-main": "0.1.x-dev"
    }
  }
}
